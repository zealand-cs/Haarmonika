<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dk.haarmonika.haarmonika.controllers.LoginController">




    <Label text="Login to the System"
           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #3498db; -fx-padding: 0 0 20 0;" />

    <HBox alignment="CENTER" spacing="10">
        <Label text="Username:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;" />
        <TextField fx:id="usernameField" promptText="Enter your username (E-mail)"
                   style="-fx-pref-width: 250px; -fx-font-size: 14px; -fx-padding: 5px;" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Password:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;" />
        <PasswordField fx:id="passwordField" promptText="Enter your password"
                       style="-fx-pref-width: 250px; -fx-font-size: 14px; -fx-padding: 5px;" />
    </HBox>

    <Button text="Login" fx:id="loginButton" onAction="#handleLogin"
            style="-fx-font-size: 16px; -fx-pref-width: 150px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10px; -fx-cursor: hand;" />

    <Label fx:id="errorLabel" style="-fx-font-size: 12px; -fx-text-fill: red; -fx-padding: 10px 0 0 0; -fx-font-style: italic;" visible="false"/>
</VBox>